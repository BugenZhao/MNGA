# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build MNGA"
  lane :build do
    # CI builds should not require signing credentials.
    if ENV["CI"]
      build_app(
        scheme: "MNGA",
        configuration: "Debug",
        skip_archive: true,
        skip_codesigning: true,
        skip_package_ipa: true,
      )
    else
      build_app(scheme: "MNGA")
    end
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do |options|
    dry_run = options[:dry_run].to_s == "true"

    ensure_git_status_clean

    if ENV["CI"]
      setup_ci

      app_store_connect_api_key
      # key_id:      APP_STORE_CONNECT_API_KEY_KEY_ID
      # key_content: APP_STORE_CONNECT_API_KEY_KEY
      # issuer_id:   APP_STORE_CONNECT_API_KEY_ISSUER_ID

      match(
        type: "appstore",
        # BugenZhao:<pat>
        git_basic_authorization: Base64.strict_encode64(ENV["GIT_AUTHORIZATION"]),
      )
    else
      match(type: "appstore")
    end

    testflight_build_number = latest_testflight_build_number.to_i
    latest_tag_build_number =
      sh("git tag --list 'builds/iosbeta/*'")
        .split("\n")
        .filter_map do |tag|
          match = tag.match(%r{\Abuilds/iosbeta/(\d+)\z})
          match[1].to_i if match
        end
        .max || 0

    next_build_number = [testflight_build_number, latest_tag_build_number].max + 1
    UI.message("Next build number: #{next_build_number} (testflight=#{testflight_build_number}, tag=#{latest_tag_build_number})")

    increment_build_number(
      build_number: next_build_number,
      xcodeproj: "MNGA.xcodeproj",
    )

    build_app(scheme: "MNGA")

    changelog = changelog_from_git_commits(
      date_format: "short",
    )

    unless dry_run
      upload_to_testflight(
        changelog: changelog,
        distribute_external: true,
        groups: ["AfterPlus"],
      )

      add_git_tag
      push_git_tags
    end
  end
end
